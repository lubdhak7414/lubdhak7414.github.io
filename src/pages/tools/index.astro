---
import PageLayout from '@/layouts/BaseLayout.astro'
import ToolSection from '@/components/ToolSection.astro'
import Button from '@/components/Button.astro'

const PRODUCTIVITY = [
	{
		name: 'Zen',
		description: 'Browser',
		href: 'https://zen-browser.app/',
		iconPath: 'zen-blue',
		iconBgColour: '#414350'
	},
	{
		name: 'Joplin',
		description: 'Note Taking',
		href: 'https://joplinapp.org/',
		iconPath: 'result',
		iconBgColour: '#EFEFEE'
	},
	{
		name: 'Activity Watch',
		description: 'Activity Tracker',
		href: 'https://activitywatch.net/',
		iconPath: 'activitywatch',
		iconBgColour: '#7A3EE8'
	},

	{
		name: 'OBS Studio',
		description: 'Screen Capturer',
		href: 'https://obsproject.com/',
		iconPath: 'obs',
		iconBgColour: '#7A3EE8'
	}
]

const DEVELOPMENT = [
	{
		name: 'VS Code',
		description: 'IDE',
		href: 'https://code.visualstudio.com/',
		iconPath: 'vs_code',
		iconBgColour: '#2C2C32'
	},
	{
		name: 'ChatGPT',
		description: 'AI',
		href: 'https://chat.openai.com/',
		iconPath: 'chatgpt',
		iconBgColour: '#06A67F'
	},
	{
		name: 'GitHub Desktop',
		description: 'Git Client',
		href: 'https://desktop.github.com/',
		iconPath: 'github',
		iconBgColour: '#181717'
	},
	{
		name: 'Docker',
		description: 'Containerization',
		href: 'https://www.docker.com/',
		iconPath: 'docker',
		iconBgColour: '#2496ED'
	},
	{
		name: 'Postman',
		description: 'API Testing',
		href: 'https://www.postman.com/',
		iconPath: 'postman',
		iconBgColour: '#FF6C37'
	},
	{
		name: 'Sublime Text',
		description: 'Text Editor',
		href: 'https://www.sublimetext.com/',
		iconPath: 'sublime_text',
		iconBgColour: '#FF4D00'
	},
	{
		name: 'IntelliJ IDEA',
		description: 'IDE',
		href: 'https://www.jetbrains.com/idea/',
		iconPath: 'intellij',
		iconBgColour: '#000000'
	}
]
---

<PageLayout meta={{ title: 'Tools' }}>
	<div class='w-full'>
		<Button title='Back' href='/' style='button'>
			<svg
				xmlns='http://www.w3.org/2000/svg'
				width='14'
				height='14'
				viewBox='0 0 24 24'
				slot='icon-before'
			>
				<path
					fill='currentColor'
					d='m6.921 12.5l5.792 5.792L12 19l-7-7l7-7l.713.708L6.921 11.5H19v1z'
				>
				</path>
			</svg>
		</Button>

		<div class='mt-5 flex w-full flex-col gap-y-10'>
			<div>
				<h1 class='mb-1 text-2xl font-bold'>Tools</h1>
				<p>Tools and software I use daily</p>
			</div>

			<ToolSection title='Productivity' tools={PRODUCTIVITY} />
			<ToolSection title='Development' tools={DEVELOPMENT} />
		</div>
	</div>
</PageLayout>
